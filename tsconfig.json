{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ezfe/*": ["packages/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./**/*.ts",
    "./examples/**/*.ts",
    "./examples/**/*.tsx",
    "./examples/**/*.vue",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./packages/**/*.ts",
    "./packages/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
